check2.php
-----------------------------------

<?php
	$d="";
	$d=$_POST['ename'];
	$con=mysqli_connect("localhost","root","","charan");
	if(!$con)
	{
		die("Connection failed:".mysqli_connect_error());
	}
	$re="";
	$ch="DELETE FROM pceventslist where Event='$d'";
	if(mysqli_query($con,$ch))
	{
		echo "<html>";
		echo "<body>";
		echo "Deleted suucessfully<br><br>";
		echo "<br><a href='events.php' style='font-size:30px;' target='_parent'>View events</a><br><br>";
		echo "</body>";
		echo "</html>";
	}
	?>
	
	
